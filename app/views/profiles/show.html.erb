<div class="row">
  <% if flash[:notice] %>
    <div class="notice alert"><%= flash[:notice] %></div>
  <% end %>
  <span><%= link_to "Edit Profile", [:edit, @profile] %></span>
  <h1>Profile</h1>
  <div class="col-xs-12">
    <h3><%= @profile.customer.username %></h3>
    <p id="star-sign">Star Sign</p>
    <%= @profile.star_sign %>
    <p>
      <p id="weight">Weight</p>
    </p>
    <p>
      <%= @profile.weight %>kg
    </p>
    <p>
      <p id="profile-completedness">Profile Completedness</p>
    </p>
    <p>
      <%= @profile.completedness %>%
    </p>
  </div>
</div>
