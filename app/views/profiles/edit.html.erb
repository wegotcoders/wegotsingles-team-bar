<div class="row">
  <h1>Your Profile</h1>
  <div class="col-xs-12">

  <%= form_for @profile, html: { multipart: true } do |f| %>
    <fieldset>
      <%= f.label "Do you drink?" %>
      <%= f.check_box 'drinker' %>
    </fieldset>
    <fieldset>
      <% if @profile.avatars? %>
        <% @profile.avatars.each do |image| %>
          <%= image_tag(image.url) %>
        <% end %>
      <% end %>
      <%= f.label "Upload your Avatar" %>
      <%= f.file_field :avatars, multiple: true %>
    </fieldset>
    <%= f.submit "Save" %>
  <% end %>

  </div>
</div>
