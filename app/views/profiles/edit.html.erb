<div class="row">
  <h1>Your Profile</h1>
  <div class="col-xs-12">


  <%= form_for @profile do |f| %>
    <fieldset>
      <%= f.label "I drink" %>
      <%= f.radio_button 'drinker', true %>
      <%= f.label "I don't drink" %>
      <%= f.radio_button 'drinker', false %>
    </fieldset>
    <%= f.submit "Save" %>
  <% end %>



  </div>
</div>
